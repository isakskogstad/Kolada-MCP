{
  "name": "kolada-mcp-server",
  "version": "2.1.0",
  "description": "MCP server providing access to Swedish municipality and regional data through the Kolada API v3. Features tool annotations, intelligent caching, and dual transport support.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kolada-mcp-server": "dist/index.js",
    "kolada-mcp-http": "dist/http-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:http": "MCP_MODE=http tsx src/http-server.ts",
    "start": "node dist/index.js",
    "start:http": "MCP_MODE=http node dist/http-server.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "kolada",
    "sweden",
    "municipality",
    "kpi",
    "opendata",
    "swedish-data",
    "llm",
    "ai-tools"
  ],
  "author": "Isak Skogstad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isakskogstad/KOLADA-MCP"
  },
  "homepage": "https://github.com/isakskogstad/KOLADA-MCP#readme",
  "bugs": {
    "url": "https://github.com/isakskogstad/KOLADA-MCP/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "axios": "^1.7.9",
    "axios-retry": "^4.5.0",
    "bottleneck": "^2.19.5",
    "express": "^4.21.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
